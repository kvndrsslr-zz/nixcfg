set editor="urxvt -e vim '+set ft=mail'"
set defsearch="duckduckgo"
set urlseparator=
set focuscontent

" nnoremap j 15j
" nnoremap k 15k
map j <Down>
map k <Up>
map <C-d> <PageDown>
map <C-u> <PageUp>

